@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed')
*
    padding: 0
    margin: 0
    box-sizing: border-box
    font-family: 'Roboto Condensed', sans-serif
.nav-bar
    // background: #00000050
    position: fixed
    width: 100%
    padding: 1rem
    z-index: 12
    transition: 1s
    .container
        display: flex
        justify-content: flex-start
        align-items: center
        .logo
            img
                height: 60px
                transition: 0.5s
.first
    position relative
    background: url(../img/bg1.jpg) no-repeat
    background-color: #000000
    background-size: cover
    background-position: center center
    width: 100%
    height 100%
    transition: 1s all
    padding-top: 150px
    padding-bottom: 100px
    .count
        background: #012948c7
        position: fixed
        top: 100px
        right 0
        margin: 0 auto
        width: 340px
        text-align: left
        padding: 1rem
        z-index 13
        h2
            color: orange
            font-size: 2rem
            text-transform: uppercase
            line-height: 2rem;
        p
            color: #fff
            font-size: 1.2rem
            line-height: 1.4rem
            .counter
                font-size: 2rem
                color: orange
                animation-name: counter
                animation-duration: 1s;
                animation-timing-function: linear;
                animation-iteration-count: infinite;
                @keyframes counter
                    0% {font-size: 1rem;font-weight: 300;}
                    50% {font-size: 1.2rem;font-weight: 500;}
                    100% {font-size: 1rem;font-weight: 300;}
    .container
        position relative
        display: flex
        height: 100%
        overflow hidden
        .left
            position: relative
            display: flex
            flex-direction: column
            justify-content: flex-start
            align-items: center
            width: 700px
            height: 100%
            transition: 1s
            .laptop
                background-size: cover
                width: 900px
                height 500px
                overflow: hidden
                display: flex
                flex-direction: column
                justify-content: center
                align-items: center
                text-align: center
                img
                    width: 100%
                    position: absolute
                    top: 0
                h2
                    width: 70%
                    max-width: 720px
                    text-transform: uppercase
                    text-align: center
                    font-size: 3.5rem
                    line-height: 3.5rem
                    background-image: linear-gradient(to right top, #ff9200, #ffa841, #ffbd6c, #ffd195, #ffe4c0)
                    -webkit-background-clip: text
                    -webkit-text-fill-color: transparent
                    z-index: 10
                p   
                    width: 100%
                    text-align: center
                    font-size: 1.5rem
                    color: #ffffff
                    z-index: 10
                button
                        background-image: linear-gradient(to left, #ffa841, #ffa841, #ffa841, #ffa841, #ffa841, #fff, #fff, #ffa841, #ffa841, #ffa841, #ffa841, #ffa841);
                        box-shadow: 0px -3px 40px 1px rgba(0,0,0,0.75)
                        background-size:1000%
                        background-position:right
                        border-radius:5px
                        display: flex
                        justify-content: center
                        align-items:center
                        width:250px
                        height:50px
                        margin:10px 0
                        cursor: pointer
                        color:#fff
                        text-transform:uppercase
                        font-size:1.5rem
                        font-weight:400
                        transition: 1s
                        margin-top: 20px
                        border: none
                        z-index 10
                        animation-name: button2
                        animation-duration: 15s
                        animation-iteration-count: infinite
                        animation-timing-function: linear
                        @keyframes button2
                            0%{background-position: right;}
                            95%{background-position: right;}                            
                            100%{background-position: left;}
                        &:hover
                            background: #012948
                .arrow
                    z-index 10
                    color: #ffffff
                    font-size: 2rem
                    position: relative
                    top: -58px
                    left:150px
                    animation-name: arrow
                    animation-duration: 1s
                    animation-iteration-count: infinite
                    @-webkit-keyframes arrow
                        0%   {left:150px}
                        50%   {left:170px}
                        100% {left: 150px}
        @media (max-width: 1200px)
            flex-direction: column    
        .right
            position relative
            display: flex
            flex-direction: column
            align-items: center
            justify-content: flex-start
            width: 100%
            margin-left: 1rem
            transition: 1s
            .form-wrap
                width: 380px
                height: 100%
                h2
                    text-align: center
                    background: #012948c7
                    padding: 2rem
                    color: #ffffff
                    margin: 0
                form
                    position relative
                    background: #ffffff
                    background-size: cover
                    width: 100%
                    padding: 1rem
                    display: flex
                    flex-direction: column
                    align-items: center
                    padding-bottom: 50px
                    .input-wrap
                        width: 100%
                        input
                            width: 100%
                            padding: 0.6rem
                            margin: 1rem 0
                            background: none
                            border: 1px solid #dcdcdc
                    button
                        position: absolute
                        bottom: -30px
                        margin-top:10px
                        padding: 1rem 2rem
                        background: orange
                        border: none
                        border-radius: 5px
                        color: #ffffff
                        text-transform: uppercase
                        font-size: 1.5rem
                        box-shadow: 0px -2px 16px 1px rgba(0,0,0,0.75)
    .secure-wrap
        display: flex
        justify-content: space-around
        padding: 1rem 0
        .secure
            display: flex
            justify-content: center
            align-items: center
            padding: 1rem 1rem
            .block
                margin: 1rem
                img 
                    height: 40px
        .bidask
            display: flex
            justify-content: center
            align-items: center
            span 
                padding: 0 1rem
                color: orange
                font-size: 1.5rem
.people-wrap
    padding-top: 50px
    width: 100%
    max-width: 4000px
    height: 350px
    overflow hidden
    .people
        border-radius: 30px
        width: 380px
        margin: 10px 0
        display: flex
        justify-content: space-between
        align-items: center
        background: #00000090
        overflow hidden
        .people-photo
            border-radius: 50%
            overflow hidden
        .people-name
            color: white
            padding: 0 1rem
        .people-profit
            color: orange
            padding: 0 1rem
        &:last-child
            opacity 0
.second
    // background: #ffffffd4
    width: 100%
    height: 400px
    overflow hidden
    position: relative
    img
        width: 100%
        position: absolute
        top: -100px
        filter: blur(10px)
        z-index -1
    .container
        display: flex
        flex-direction: column
        justify-content: center
        align-items: flex-start
        text-align: left
        height: 100%
        h2
            font-size: 4rem
            max-width: 760px
            font-weight: 700
            color: #044b82
            padding: 1rem 0
            span
                color: #044b82
                background-image: none
        p 
            max-width 760px
            font-size: 1.1rem
            color: #012948
.third
    width: 100%
    height: 600px
    .container
        position relative
        height: 100%
        display: flex
        flex-direction: column
        justify-content: center
        .girl
            position: absolute
            bottom: 0
            right -30%

.loader
    position: fixed
    top: 0
    bottom: 0
    right 0
    left: 0
    display flex
    justify-content center
    align-items center
    background #000000
    z-index 11
    .bitcoin
        width 500px
        height 500px
        background #000000
        position relative
        display flex
        justify-content center
        align-items center
        .block1,.block2,.block3,.block4
            position absolute
            display flex
            justify-content center
            align-items center
        .block1
            z-index 10
            img
                width 140px
                border-radius 50%
                box-shadow: 0px 0px 51px 2px rgba(0,0,0,0.75);
                overflow hidden
                animation-name bitcoin
                animation-duration 150s
                animation-iteration-count infinite
                animation-timing-function linear
                @keyframes bitcoin
                    0%   {transform:rotateZ(0deg)}
                    50%   {transform:rotateZ(1080deg)}
                    100% {transform:rotateZ(3060deg)}
        .block4
            z-index 7
            width 190px
            height 190px
            border-radius 50%
            overflow hidden
            img
                width 200px
                animation-name bitcoin4
                animation-duration 5.1s
                animation-iteration-count infinite
                animation-timing-function linear
                @keyframes bitcoin4
                    0%   {transform:rotateZ(0deg)}
                    50%   {transform:rotateZ(-180deg)}
                    100% {transform:rotateZ(-360deg)}
        
        